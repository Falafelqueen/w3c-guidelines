<div class="card__container">
  <% group_size = group_size(guidelines.length) %>
  <% guidelines.in_groups_of(group_size, false) do |grouped_guidelines| %>
    <div class="column">
      <% grouped_guidelines.each do |guideline| %>
        <%= render "guideline", guideline: guideline %>
      <% end %>
    </div>
  <% end %>
</div>
<ul></ul>
<% availabilities.keys.each_cons(2) do |prev,day| %>
  <% day_array = key.split("_") %>
  <span><%= "#{day_array[0].capitalize}  #{day_array[1] == "am" ? "morning" : "afternoon"}" %></span>
<% end %>
