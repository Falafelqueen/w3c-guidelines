<%= turbo_frame_tag :data_table do %>
  <div class="container-centered container-spaced-m mt-l">
    <h2>Images for
      <span class="text-accent-color-2">
        <%= @site.url %>
      </span>
    </h2>
    <table class="table table-striped table-rounded full-width text-left ">
      <thead>
        <tr class="table__row">
          <th>Image URL</th>
          <th>Format</th>
          <th>Size in KB</th>
          <th>
            <%= link_to site_check_new_image_export_path(@site, format: :csv) do %>
              <%= image_tag "export_icon_white.svg",
              height: 28,
              widht: 28,
              alt: "",
              title: "Export to csv" %>
            <% end %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% site_images.each do |image| %>
          <tr lass="table__row">
            <td><%= shorten_url_with_ellipsis(image.url) %></td>
            <td><%= image.format %></td>
            <td><%= image.size_in_kb %>kb</td>
            <td></td>
          </tr>
        <% end %>
        <tr class="table__row">
          <th>Total:</th>
          <td></td>
          <td><%= total_size %></td>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>
<% end %>
